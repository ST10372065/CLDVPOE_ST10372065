@using Microsoft.AspNetCore.Http
@model List<ST10372065.Models.CartModel>

@{
    var userID = Context.Session.GetInt32("userID");
    var userName = Context.Session.GetString("userName");
}

<h2>Your Cart</h2>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    footer {
        margin-top: auto;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.ProductPrice * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<div style="display: flex; justify-content: space-between; align-items: center; margin-top: auto;">
    <p><strong>Total: @Model.Sum(item => item.ProductPrice * item.Quantity)</strong></p>
    <form asp-controller="test" asp-action="PlaceOrder" method="post">
        <button type="submit">Proceed with purchase</button>
    </form>
    <form asp-controller="test" asp-action="Transactions" method="post">
        <button type="submit">Load All Previous Transactions</button>
    </form>
</div>
